{
  "functions": [
    {
      "source": "functions",
      "codebase": "node_functions",
      "runtime": "nodejs20", 
      "ignore": [
        "node_modules",
        ".git",
        ".firebase",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    },
    {
      "source": "market_analysis_fn",
      "codebase": "python_functions",
      "runtime": "python311",
      "ignore": [
        "venv",
        "__pycache__",
        "*.pyc"
      ]
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/assets/**",
        "destination": "/assets/**"
      },
      {
        "source": "/favicon.ico",
        "destination": "/favicon.ico"
      },
      {
        "source": "**",
        "function": "app"
      }
    ]
  }
}
